<li>
  <time datetime="<%= event.event_date %>">
    <span class="day"><%= day(event.event_date) %></span>
    <span class="month"><%= month(event.event_date)%></span>
    <span class="year"><%= year(event.event_date) %></span>
    <span class="time">ALL DAY</span>
  </time>
  <% unless event.snippet_image.nil? %>
    <%= image_tag "eventsnippets/#{event.snippet_image}", size:100 %>
  <% end %>
  <div class="info">
    <h2 class="title"><%= event.event_host%></h2>
    <p class="desc"><%= event.title %></p>
    <p class="desc">
      Interests: <% event.tags.each do |tag| %>
        <button type="button" class="btn btn-secondary btn-sm"><%= tag.name %></button>
      <% end %>
    </p>
    <ul>
      <li style="width:30%;"><a href="<%= event_url(event)%>"><span class="fa fa-globe"></span> View Details</a></li>

      <% if signed_in? %>

        <% if current_user.attending?(event) %>
          <li style="width:70%;">      Your RSVP Status is <strong><%= Attendance.rsvp_status(event, current_user) %></strong>
            <span class="glyphicon glyphicon-ok"></span></li>
        <% end %>

        <% if event.creator == current_user %>
          <li style="width:70%;"> <%= link_to "edit", edit_event_url(event) %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

</li>
